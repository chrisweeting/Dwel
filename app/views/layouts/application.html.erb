<!DOCTYPE html>
<html>
  <head>
    <title>Dwel</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application'%>
    <% if current_user %>
      <script>
        window.currentUser = { 
          "id": <%= current_user.id %>,
          "email": "<%= current_user.email %>"
          };
      </script>
    <% end %>
    <script>
      window.hero = '<%= image_url 'hero.jpg' %>'
    </script>
    
  </head>

  <body>
    <%= yield %>
  </body>
</html>
