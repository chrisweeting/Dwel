.card-section {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 700px;
  width: auto;
  top: 514px;
  bottom: 0;
}

.card-section h2 {
  max-width: 425px;
  margin: 40px auto 40px;
  width: 100%;
  text-align: center;
  font-size: 20px;
  line-height: 24px;
  padding: 0 20px;
  height: auto;
}

.card-container {
  height: 500px;
  width: auto;
  display: flex;
  justify-content: space-around;
}

.card {
  position: relative;
  /* height: 464px; */
  /* width: 385px; */
  min-width: 300px;
  width: 31%;
  max-width: 350px;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  transition: transform 250ms;
  cursor: pointer;
  margin: 5px 15px;
}

.card:hover {
  transform: scale(1.04);
}

.card:hover .card-button {
  color: white;
  background-color: lightslategrey;
}

.card-button {
  position: absolute;
  width: 166px;
  height: 45px;
  bottom: 42px;
  left: 0;
  right: 0;
  margin-left: auto; 
  margin-right: auto; 
  cursor: pointer;
  background-color: white;
  border-radius: 7px;
}

.card-text {
  position: absolute;
  cursor: pointer;
  text-align: center;
  top: 270px;
  left: 0;
  right: 0;
  margin-left: auto; 
  margin-right: auto; 
  width: 300px;
  font-size: 16;
  user-select: none;
}

.stop-scrolling {
  height: 100%;
