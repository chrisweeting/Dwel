.header-menu {
  position: absolute;
  right: 7%;
  cursor: pointer;
  
}

.header-links {
  position: absolute;
  left: 5%;
  display: flex;
  justify-content: space-around;
  width: 15%;
}

.header-links a:hover {
  color: lightslategrey;
}


.header-logo {
  color: black;
  text-decoration: none;
  font-size: 40px;
  margin: 0 auto;
  
}
.hero-image {
  position: absolute;
  width: 100%;
  top: 50px;
  bottom: 700px;
  left: 0;
  right: 0;
  background-image: url("<%= asset_path('hero.jpg') %>") ;
  background-size: cover;
  min-height: 70%;
}

.hero-section {
  display: flex;
  flex-direction: column;
  position: absolute;
  background: none;
  top: 140px;
  height: 200px;
  width: 60%;
  left: 0;
  right: 0;
  margin-left: auto; 
  margin-right: auto; 
  align-items: center;
  padding: 10px 120px 10px 120px;
  justify-content: space-around;
  font-size: 40px;
  color: white;
  text-shadow: #000 0px 0px 3px,   #000 0px 0px 3px,   #000 0px 0px 3px,
}

.searchbar {
  width: 660px;
  height: 50px;
  line-height: 25px;
  padding: 0 20px;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  border-radius: 5px;
  border: none;
}

.searchbar::placeholder {
  color: rgb(175, 174, 174);
  font-size: 18px;
}

.searchbar:focus {
  outline: 3px solid lightskyblue;
  /* border: 1px solid lightskyblue; */
  /* outline: none; */
  /* box-shadow: 0 4px 8px 0 lightskyblue, 0 6px 10px 0 lightskyblue; */
}

.user-form-modal {
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 20px;
  bottom: 20px;
  left: 0;
  right: 0;
  width: 390px;
  margin: 0 auto;
  padding: 30px;
  padding-top: 40px;
  border: 1px solid black;
  z-index: 3;
  background: white;
  border-radius: 10px;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}

.modal-close {
  position: absolute;
  right: 20px;
  top: 20px;
  font-size: 30px;
  line-height: 20px;
  font-family: sans-serif;
  font-weight: 100;
  cursor: pointer;
}

.modal-close:hover {
  color: lightslategrey;
}

.user-form-modal h2 {
  font-size: 24px;
  line-height: 32px;
  text-align: center;
  margin-bottom: 20px;
}

.user-form-modal label {
  width: 100%;
  line-height: 30px;
  display: block;
}

.user-form-modal button {
  width: 100%;
  line-height: 30px;
  display: block;
}


.user-modal {
  display: none;
}
.is-open {
  display: block;
}

.user-form-modal-screen {
  position: fixed;
  background: rgba(0, 0, 0, 0.7);
  opacity: 0.5;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 2;
}

.user-form-nav {
  display: flex;
}

.user-form-nav a {
  box-sizing: content-box;
  padding: 20px;
  
}

.user-form-nav .selected {
  border-bottom: 5px solid lightslategrey;
  outline: 2px solid lightskyblue;
  padding: 20px 20px 20px 20px;
  box-shadow:0 0 10px #9ecaed;
}

.user-form {
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  align-content: center;
  padding-top: 20px;
  padding-bottom: 20px;
  border-top: 1px solid lightgray;
  border-bottom: 1px solid lightgray;
  height: 250px;
  padding-left: 25px;
  padding-right: 30px;
}

.user-form-input {
  margin-bottom: 15px;
  width: 93%;
  height: 25px;
  border: 1px solid black;
  padding: 5px 10px;
}

.user-form-button {
  margin-bottom: 15px;
  cursor: pointer;
}

.user-form-button:hover {
  background-color: lightslategrey;
  color: white;
}

.card-section {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 700px;
  width: auto;
  top: 514px;
}

.card-section h2 {
  max-width: 425px;
  margin: 40px auto 40px;
  width: 100%;
  text-align: center;
  font-size: 20px;
  line-height: 24px;
  padding: 0 20px;
}

.card-container {
  height: 500px;
  width: auto;
  display: flex;
  justify-content: space-around;
}

.card {
  position: relative;
  height: 464px;
  width: 385px;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  transition: transform 250ms;
  cursor: pointer;
}

.card:hover {
  transform: scale(1.04);
}

.card:hover .card-button {
  color: white;
  background-color: lightslategrey;
}

.card-button {
  position: absolute;
  width: 166px;
  height: 45px;
  bottom: 42px;
  left: 0;
  right: 0;
  margin-left: auto; 
  margin-right: auto; 
  cursor: pointer;
  background-color: white;
  border-radius: 7px;
}

.card-text {
  position: absolute;
  cursor: pointer;
  text-align: center;
  top: 270px;
  left: 0;
  right: 0;
  margin-left: auto; 
  margin-right: auto; 
  width: 300px;
  font-size: 16;
  user-select: none;
}

.stop-scrolling {
  height: 100%;
  overflow: hidden;
}