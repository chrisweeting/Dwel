  height: 40px;
  background-size: contain;
}

.user-dropdown {
  position: absolute;
  display: none;
  height: 125px;
  width: 300px;
  background-color: white;
  flex-direction: column;
  top: 57px;
  right: -30px;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
