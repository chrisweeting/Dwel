.searchbar {
  width: 660px;
  height: 50px;
  line-height: 25px;
  padding: 0 20px;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  border-radius: 5px;
  border: none;
}

.searchbar::placeholder {
  color: rgb(175, 174, 174);
  font-size: 18px;
}

.searchbar:focus {
  outline: 3px solid lightskyblue;
  /* border: 1px solid lightskyblue; */
  /* outline: none; */
  /* box-shadow: 0 4px 8px 0 lightskyblue, 0 6px 10px 0 lightskyblue; */
}

.search-container {
  position: relative;
  height: 50px;
}

.sticky {
  position:fixed;
  top:0;
  z-index:100;
  margin: 0 auto;
}

.stick {
  box-shadow: none;
  border: 1px solid lightslategray;
}

.active {
  position: fixed;
  top: 0;
  width: 100vw;
  height: 60px;
  background-color: white;
  z-index: 1;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}

.bar {
  transition-duration: 100ms;
}

#search-submit {
  height: 30px;
  width: 30px;
  background-image: url("<%= asset_path('search.png') %>") ;
  background-size: cover;
  position: absolute;
  right: 13px;
  top: 13px;
  cursor: pointer;
}

.user-form-modal {
  display: flex;
  flex-direction: column;
  position: absolute;
  /* top: 20px; */
  top: 3vh;
  /* bottom: 20px; */
  bottom: 2vh;
  left: 0;
  right: 0;
  width: 390px;
  height: 85vh;
  margin: 0 auto;
  padding: 30px;
  padding-top: 40px;
  border: 1px solid black;
  z-index: 3;
  background: white;
  border-radius: 10px;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}

.modal-close {
  position: absolute;
  right: 20px;
  top: 20px;
  font-size: 30px;
  line-height: 20px;
  font-family: sans-serif;
  font-weight: 100;
  cursor: pointer;
}

.modal-close:hover {
  color: lightslategrey;
}

.user-form-modal h2 {
  font-size: 24px;
  line-height: 32px;
  text-align: center;
  margin-bottom: 20px;
}

.user-form-modal label {
  width: 100%;
  line-height: 30px;
  display: block;
}

.user-form-modal button {
  width: 100%;
  line-height: 30px;
  display: block;
}


.user-modal {
  display: block;
}
.is-open {
  display: block;
}

.user-form-modal-screen {
  position: fixed;
  background: rgba(0, 0, 0, 0.412);
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 2;
  cursor: default;
}

.user-form-nav {
  display: flex;
}

.user-form-nav button {
  background-color: white;
  border: none;
  width: fit-content;
  height: 70px;
  padding: 20px 20px 20px 20px;
}

.user-form-nav .lit {
